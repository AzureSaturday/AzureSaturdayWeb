@using AzureSaturday.Helpers
@{
    ViewData["Title"] = "Events";
}

<h1>Upcoming and Previous Events</h1>

<div id="carousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carousel" data-slide-to="0" class="active"></li>
        <li data-target="#carousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://upload.wikimedia.org/wikipedia/commons/thumb/0/06/Brandenburger_Tor_Nachts.JPG/800px-Brandenburger_Tor_Nachts.JPG" alt="Berlin">
            <div class="carousel-caption d-none d-block">
                <h2>Berlin</h2>
                <p>Saturday, 10.11.2018</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://upload.wikimedia.org/wikipedia/commons/thumb/d/d3/Stadtbild_M%C3%BCnchen.jpg/800px-Stadtbild_M%C3%BCnchen.jpg" alt="Munich">
            <div class="carousel-caption d-none d-block">
                <h2>Munich</h2>
                <p>Saturday, Mid 2019</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">AzureSaturday</h1>
        <img src="~/images/speaker.jpg" width="200" class="float-left margin-right-10" />
        <p class="lead">@string.Concat(Constants.Event, "s") are free community-focused Azure events dedicated to educating and engaging members of the local technical community. @string.Concat(Constants.Event, "s") draws upon the expertise of local Azure IT professionals, developers and solutions architects who come together to share their real world experiences, lessons learned, best practices, and general knowledge with other like-minded individuals.</p>
    </div>
</div>

<h2>Recent events</h2>
<div id="carousel" class="carousel carousel-small slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carousel" data-slide-to="0" class="active"></li>
        <li data-target="#carousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="item">
                <img class="d-block carousel-small-image" src="https://upload.wikimedia.org/wikipedia/commons/thumb/d/d3/Stadtbild_M%C3%BCnchen.jpg/800px-Stadtbild_M%C3%BCnchen.jpg" alt="Berlin">
                <div class="caption">
                    <h2>Munich</h2>
                    <p>24.06.2016</p>
                </div>
            </div>
            <div class="item">
                <img class="d-block  carousel-small-image" src="https://upload.wikimedia.org/wikipedia/commons/thumb/d/d3/Stadtbild_M%C3%BCnchen.jpg/800px-Stadtbild_M%C3%BCnchen.jpg" alt="Munich">
                <div class="caption">
                    <h2>Munich</h2>
                    <p>26.05.2018</p>
                </div>
            </div>
        </div>
    </div>
</div>